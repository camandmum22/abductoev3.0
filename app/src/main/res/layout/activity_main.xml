<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fondo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ab-Duc-Toe"
        android:id="@+id/textView"
        android:layout_marginTop="81dp"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/playVsOther"
        android:layout_alignStart="@+id/playVsOther" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 Jugador"
        android:onClick="unJugador"
        android:id="@+id/playVsMachine"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2 Jugadores"
        android:onClick="dosJugadores"
        android:id="@+id/playVsOther"
        android:layout_below="@+id/playVsMachine"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ayuda"
        android:id="@+id/acerca"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/playVsMachine"
        android:layout_alignStart="@+id/playVsMachine" />
</RelativeLayout>
