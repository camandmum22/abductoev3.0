<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/fondo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Ab-Duc-Toe"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView"
        android:layout_marginTop="50dp"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="60dp"
        android:textColor="@color/green"
        android:typeface="sans"
        android:enabled="true"
        android:singleLine="false"
        android:gravity="center"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:onClick="vsMachine"
        android:id="@+id/playVsMachine"
        android:background="@mipmap/vs_machine"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:onClick="vsOther"
        android:id="@+id/playVsOther"
        android:background="@mipmap/vs_other"
        android:layout_below="@+id/textView"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@+id/playVsMachine"
        android:layout_toEndOf="@+id/playVsMachine" />

    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:onClick="acerca"
        android:id="@+id/acerca"
        android:background="@mipmap/help"
        android:layout_below="@+id/playVsMachine"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
